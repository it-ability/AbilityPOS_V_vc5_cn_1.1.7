                         android:layout_gravity="center_vertical"
                         android:layout_weight="1"
                         android:text="@string/phone_no" />
                 </TableRow>

                 <TableRow
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_margin="@dimen/view_medium_margin">

                     <ImageView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_weight="0.3"
                         android:contentDescription="@string/data_insights"
                         android:src="@android:drawable/ic_dialog_map"
                         android:tint="@color/colorPrimary" />

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_gravity="center_vertical"
                         android:layout_weight="1"
                         android:text="@string/address" />
                 </TableRow>-->

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/view_medium_margin"
                    android:onClick="openMail">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:contentDescription="@string/ability"
                        android:src="@android:drawable/sym_action_email"
                        android:tint="@color/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@string/send_mail" />
                </TableRow>

            </TableLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/device_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/view_medium_margin"
            app:cardCornerRadius="@dimen/view_small_margin"
            app:cardElevation="@dimen/view_small_margin">

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>
