<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/app_layout"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha=".10"
                        android:background="@drawable/logo"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/txt_login_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:text="@string/register_com_title"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/huge_title"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/layout_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_login_title"
                        android:layout_marginTop="10dp"
                        android:paddingTop="@dimen/small_margin_top">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.15" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">

                                <EditText
                                    android:id="@+id/edit_company_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/edt_height"
                                    android:background="@drawable/edt_background_color"
                                    android:hint="@string/com_name"
                                    android:inputType="text"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/black"
                                    android:textSize="@dimen/small_textSize" />

                                <EditText
                                    android:id="@+id/edit_company_address"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/edt_height"
                                    android:layout_marginTop="@dimen/small_margin_top"
                                    android:background="@drawable/edt_background_color"
                                    android:hint="@string/com_address"
                                    android:inputType="text"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/black"
                                    android:textSize="@dimen/small_textSize" />

                                <EditText
                                    android:id="@+id/edit_com_country"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/edt_height"
                                    android:layout_marginTop="@dimen/small_margin_top"
                                    android:background="@drawable/edt_background_color"
                                    android:hint="@string/com_country"
                                    android:inputType="text"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/black"
                                    android:textSize="@dimen/small_textSize" />

                                <EditText
                                    android:id="@+id/edit_com_province"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/edt_height"
                                    android:layout_marginTop="@dimen/small_margin_top"
                                    android:background="@drawable/edt_background_color"
                                    android:hint="@string/com_province"
                                    android:inputType="text"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/black"
                                    android:textSize="@dimen/small_textSize" />

                                <EditText
                                    android:id="@+id/edit_com_township"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/edt_height"
                                    android:layout_marginTop="@dimen/small_margin_top"
                                    android:background="@drawable/edt_background_color"
                                    android:hint="@string/com_township"
                                    android:inputType="text"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/black"
                                    android:textSize="@dimen/small_textSize" />

                                <EditText
                                    android:id="@+id/edit_com_contact_person"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/edt_height"
                                    android:layout_marginTop="@dimen/small_margin_top"
                                    android:background="@drawable/edt_background_color"
                                    android:hint="@string/com_contact_person"
                                    android:inputType="text"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/black"
                                    android:textSize="@dimen/small_textSize" />

                                <EditText
                                    android:id="@+id/edit_com_email"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/edt_height"
                                    android:layout_marginTop="@dimen/small_margin_top"
                                    android:background="@drawable/edt_background_color"
                                    android:hint="@string/com_email"
                                    android:inputType="textEmailAddress"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/black"
                                    android:textSize="@dimen/small_textSize" />

                                <EditText
                                    android:id="@+id/edit_com_phno"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/edt_height"
                                    android:layout_marginTop="@dimen/small_margin_top"
                                    android:background="@drawable/edt_background_color"
                                    android:hint="@string/com_phno"
                                    android:inputType="phone"
                                    android:textAlignment="center"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/black"
                                    android:textSize="@dimen/small_textSize" />

                                <TextView

                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/small_margin_top"
                                    android:text="Save To"
                                    android:textColor="#DA1111"
                                    android:textSize="18dp">

                                </TextView>

                                <RadioGroup
                                    android:id="@+id/radio_group_com"
                                    android:layout_width="match_parent"
                                    android:layout_height="80dp"
                                    android:orientation="vertical">

                                    <RadioButton

                                        android:id="@+id/phonest_com"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Phone Storage"></RadioButton>

                                    <RadioButton

                                        android:id="@+id/cloudst_com"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Cloud Storage"></RadioButton>

                                </RadioGroup>

                            </LinearLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.15" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/layout_three"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layout_one">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4">

                            <Button
                                android:id="@+id/btn_com_login"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/edt_height"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="@dimen/small_margin_top"
                                android:background="@drawable/button_bg"
                                android:onClick="register_com"
                                android:text="@string/registers"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/small_textSize"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>