<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/v_detailScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mobilepos.abc.abilitypos.VoucherDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/vrno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voucher No : 21098909878921"
            android:textAlignment="textEnd"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cusName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Name   \t:     \t" />

            <TextView
                android:id="@+id/remark"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Remark\t:     \t" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/detailNe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Item Name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/detailQt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Qty"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/detailAm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Amount"
                android:textAlignment="textEnd"
                android:textSize="20sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/border" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/detailN"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/detailQ"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/detailA"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="10sp" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/border" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="106dp"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/tprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tax " />

            <TextView
                android:id="@+id/tax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tprice"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:text="1000"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/dprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tax"
                android:layout_marginTop="10dp"
                android:text="Discount " />

            <TextView
                android:id="@+id/discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dprice"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:text="1000"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/totaltext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="123dp"
                android:text="Total" />

            <TextView
                android:id="@+id/nettotaltext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tax"
                android:layout_alignEnd="@+id/totaltext"
                android:text="Net Total" />

            <TextView
                android:id="@+id/nettotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/totalPrice"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:text="15000"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/totalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:text="15000"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/receivetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/totaltext"
                android:layout_alignBottom="@+id/receivedPayment"
                android:text="Receive" />

            <TextView
                android:id="@+id/receivedPayment"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="50dp"
                android:text="0"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/balancetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/totaltext"
                android:layout_marginTop="80dp"
                android:text="Balance" />

            <TextView
                android:id="@+id/refundAmt"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="80dp"
                android:text="0"
                android:textAlignment="center" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:focusableInTouchMode="true"
            android:padding="@dimen/small_padding">

            <Button
                android:id="@+id/delete"
                android:layout_width="130dp"
                android:layout_height="34dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/icon_background"
                android:drawableEnd="@drawable/delete_icon"
                android:text="Delete" />

            <Button
                android:id="@+id/save"
                android:layout_width="130dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_bg"
                android:drawableEnd="@drawable/printicon"
                android:text="Print"
                android:textAllCaps="false" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/buttonLayout"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_weight="2"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp">

            <ImageView
                android:id="@+id/previous"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:onClick="onClickPrevious"
                android:padding="@dimen/small_margin_top"
                android:src="@drawable/previous"
                android:textAllCaps="false" />

            <ImageView
                android:id="@+id/next"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_weight="1"
                android:onClick="onClickNext"
                android:padding="@dimen/small_margin_top"
                android:src="@drawable/next"
                android:textAllCaps="false" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>
