<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke
                android:width="1dp"
                android:color="@color/black" />
            <gradient
                android:angle="135"
                android:centerColor="#e6f1fc"
                android:endColor="#f7f8f9"
                android:startColor="#d4d7d7" />
            <corners android:radius="5dp" />
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
        </shape>
    </item>

</layer-list>